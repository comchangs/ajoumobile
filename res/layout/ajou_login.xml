<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@drawable/background">
    <ImageView android:src="@drawable/titlebar" android:id="@+id/ImageView01" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_gravity="center_vertical|center_horizontal" android:text="아주대 통합 로그인 " android:textSize="25sp" android:layout_margin="20px" android:textColor="#333"></TextView>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="match_parent" android:orientation="vertical">
            <ImageView android:layout_width="wrap_content" android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/ajou_login_logo" android:layout_gravity="center_vertical|center_horizontal" android:layout_margin="30px"></ImageView>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_marginBottom="10px" android:layout_marginTop="10px">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="15" android:id="@+id/linearLayout2" android:orientation="vertical">
                    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" android:id="@+id/login_id_input" android:hint="ID를 입력하세요 " android:layout_weight="1"></EditText>
                    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" android:password="true" android:id="@+id/login_password_input" android:hint="Password를 입력하세요" android:layout_weight="1"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/linearLayout3">
                    <Button android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/login_button" android:drawableLeft="@drawable/key" android:text=" 로그인 "></Button>
                </LinearLayout>
            </LinearLayout>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/auto_login_checkBox1" android:text="자동 로그인 " android:textColor="#666"></CheckBox>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_margin="10px" android:text="아주포털과 연동되는 것으로 학교 홈페이지에서 사용되는 아이디로 로그인 하시면 됩니다." android:textColor="#333"></TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

