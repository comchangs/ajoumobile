<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/background">
	<ImageView android:src="@drawable/titlebar" android:id="@+id/imageView1"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
	<TextView android:id="@+id/textView1" android:text="열람실 잔여 좌석 조회"
		android:padding="10sp" android:textSize="20sp" android:textColor="#333333"
		android:layout_width="fill_parent" android:textStyle="bold|italic"
		android:background="#661358be" android:layout_height="50sp"></TextView>
	<Button android:id="@+id/readingroomconditionmenu_btn1" android:text="B1" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="match_parent" android:drawableLeft="@drawable/books_icon1" android:textSize="18sp" android:background="#20000000" android:layout_margin="20sp"></Button>
	<Button android:id="@+id/readingroomconditionmenu_btn2" android:text="C1" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="match_parent" android:drawableLeft="@drawable/books_icon2" android:textSize="18sp" android:background="#20000000" android:layout_margin="20sp"></Button>
	<Button android:id="@+id/readingroomconditionmenu_btn3" android:text="C2" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="match_parent" android:drawableLeft="@drawable/books_icon3" android:textSize="18sp" android:background="#20000000" android:layout_margin="20sp"></Button>
	<Button android:id="@+id/readingroomconditionmenu_btn4" android:text="D1" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="match_parent" android:drawableLeft="@drawable/books_icon4" android:textSize="18sp" android:background="#20000000" android:layout_margin="20sp"></Button>
</LinearLayout>	