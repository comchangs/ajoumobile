<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/background">
    <ImageView android:src="@drawable/titlebar" android:id="@+id/imageView1" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
    <TextView android:background="#661358be" android:textSize="20sp" android:textStyle="bold|italic" android:textColor="#333333" android:id="@+id/TextView01" android:layout_height="50sp" android:layout_width="fill_parent" android:padding="10sp" android:text="교내 전화번호 안내"></TextView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="70sp">
        <EditText android:id="@+id/editText1" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:hint="부서/기관명을 입력하세요."></EditText>
        <Button android:id="@+id/button1" android:layout_height="wrap_content" android:text="검색" android:layout_width="70sp"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_weight="1" android:gravity="center_horizontal">
        <ImageButton android:src="@drawable/phone_icon1" android:id="@+id/imageButton1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:layout_marginRight="15sp" android:layout_marginLeft="15sp"></ImageButton>
        <ImageButton android:src="@drawable/phone_icon2" android:id="@+id/imageButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:layout_marginRight="15sp" android:layout_marginLeft="15sp"></ImageButton>
        <ImageButton android:src="@drawable/phone_icon3" android:id="@+id/imageButton3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:layout_marginRight="15sp" android:layout_marginLeft="15sp"></ImageButton>
    </LinearLayout>

</LinearLayout>
