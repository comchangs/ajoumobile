<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/background">
    <ImageView android:src="@drawable/titlebar" android:id="@+id/imageView1" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
    <TextView android:background="#661358be" android:textSize="20sp" android:textStyle="bold|italic" android:textColor="#333333" android:id="@+id/TextView01" android:layout_height="50sp" android:layout_width="fill_parent" android:padding="10sp" android:text="교내 전화번호 안내"></TextView>
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1"
		android:layout_weight="1">
		<LinearLayout android:id="@+id/linearLayout1"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView android:textColor="#333" android:layout_height="wrap_content" android:singleLine="true" android:textSize="20sp" android:text="대분류 불러오는 중..." android:id="@+id/food_textView1" android:layout_width="match_parent" android:layout_marginLeft="10sp" android:layout_marginTop="10sp"></TextView>
			<TextView android:layout_height="wrap_content" android:text="소분류 불러오는 중..."
				android:id="@+id/food_textView2"
				android:textSize="20sp" android:layout_width="match_parent" android:textColor="#333" android:layout_marginLeft="10sp"></TextView>
			<LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="50sp" android:padding="20sp" android:layout_width="wrap_content" android:layout_gravity="center" android:background="#20226666">
				<TextView android:textColor="#333" android:layout_height="wrap_content" android:layout_gravity="center" android:textSize="30sp" android:text="이름 불러오는 중..." android:id="@+id/food_textView3" android:layout_width="wrap_content"></TextView>
				<TextView android:textColor="#333" android:layout_height="wrap_content" android:layout_gravity="center" android:textSize="20sp" android:text="전화번호 불러오는 중..." android:id="@+id/food_textView4" android:layout_width="wrap_content"></TextView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<Button android:layout_height="wrap_content"
		android:drawableLeft="@drawable/phone" android:text=" 전화걸기 "
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:id="@+id/food_button1" android:layout_marginTop="10sp"></Button>
</LinearLayout>
